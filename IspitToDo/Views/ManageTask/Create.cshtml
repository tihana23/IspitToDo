@model IspitToDo.Models.Tasks

@{
    ViewData["Title"] = "Create";
    bool fromTodolistDetails = ViewBag.FromTodolistDetails ?? false;

}

<h1>Create</h1>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            
            @if (fromTodolistDetails)
            {
                <div class="form-group">
                    <label asp-for="TodolistId" class="control-label"></label>
                    <select asp-for="TodolistId" class="form-control" asp-items="ViewBag.TodolistId"></select>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="TodolistId" />
            }
            <div class="form-group form-check">
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
